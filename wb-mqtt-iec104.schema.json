{
  "type": "object",
  "title": "service_title",
  "configFile": {
    "path": "/etc/wb-mqtt-iec104.conf",
    "service": "wb-mqtt-iec104"
  },
  "definitions": {
    "control": {
      "type": "object",
      "title": "Control",
      "headerTemplate": "{{self.name}}",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "Send",
          "propertyOrder": 1,
          "_format": "checkbox"
        },
        "topic": {
          "type": "string",
          "title": "MQTT device and control (from topic name)",
          "propertyOrder": 2
        },
        "info": {
          "type": "string",
          "title": "For information only",
          "propertyOrder": 3
        },
        "address": {
          "type": "integer",
          "title": "Unique IEC information object address",
          "minimum": 1,
          "maximum": 16777215,
          "propertyOrder": 4
        },
        "iec_type": {
          "type": "string",
          "enum": [
            "single",
            "short",
            "scaled",
            "single_time",
            "short_time",
            "scaled_time"
          ],
          "title": "Information object type",
          "default": "measured value short",
          "propertyOrder": 5,
          "options": {
            "enum_titles": [
              "single point (M_SP_NA_1)",
              "measured value short (M_ME_NC_1)",
              "measured value scaled (M_ME_NB_1)",
              "single point with timestamp (M_SP_TB_1)",
              "measured value short with timestamp (M_ME_TF_1)",
              "measured value scaled with timestamp (M_ME_TE_1)"
            ]
          }
        }
      },
      "required": ["topic", "address", "iec_type"]    },
    "group": {
      "type": "object",
      "title": "Group",
      "headerTemplate": "{{self.name}}",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "Enable group",
          "propertyOrder": 2,
          "_format": "checkbox"
        },
        "name": {
          "type": "string",
          "title": "Group name",
          "propertyOrder": 1
        },
        "controls": {
          "type": "array",
          "title": "Controls",
          "propertyOrder": 3,
          "_format": "table",
          "items": {
            "$ref": "#/definitions/control"
          },
          "options": {
            "disable_array_reorder": true,
            "disable_array_delete_last_row": true,
            "disable_array_delete_all_rows": true,
            "disable_collapse": true,
            "compact": true,
            "wb": {
              "disable_panel": true
            }
          }
        }
      },
      "required": ["name", "controls"],
      "options" : {
        "disable_edit_json" : true,
        "disable_properties": true,
        "disable_collapse": true,
        "wb": {
          "disable_title": true
        }
      }
    }
  },
  "properties": {
    "debug": {
      "type": "boolean",
      "title": "Enable debug logging",
      "default": false,
      "_format": "checkbox",
      "propertyOrder": 1
    },
    "mqtt": {
      "type": "object",
      "title": "MQTT connection",
      "properties": {
        "host": {
          "type": "string",
          "title": "Broker address",
          "default": "localhost",
          "propertyOrder": 1
        },
        "port": {
          "type": "integer",
          "title": "Port",
          "default": 1883,
          "minimum": 1,
          "maximum": 65535,
          "propertyOrder": 2
        },
        "keepalive": {
          "type": "integer",
          "title": "Keep-alive interval",
          "default": 60,
          "propertyOrder": 3
        },
        "auth": {
          "type": "boolean",
          "title": "Use username+password authentication",
          "default": false,
          "_format": "checkbox",
          "propertyOrder": 4
        },
        "username": {
          "type": "string",
          "title": "Username",
          "propertyOrder": 5
        },
        "password": {
          "type": "string",
          "title": "Password",
          "_format": "password",
          "propertyOrder": 6
        }
      },
      "required": ["host", "port"],
      "propertyOrder": 2,
      "options" : {
        "disable_edit_json" : true,
        "disable_collapse" : true
      }
    },
    "iec104": {
      "type": "object",
      "title": "IEC 60870-5-104 server",
      "properties": {
        "host": {
          "type": "string",
          "title": "Bind address",
          "description": "host_desc",
          "propertyOrder": 1
        },
        "port": {
          "type": "integer",
          "title": "TCP port",
          "default": 2404,
          "minimum": 1,
          "maximum": 65535,
          "propertyOrder": 2
        },
        "address": {
          "type": "integer",
          "title": "Common address",
          "default": 1,
          "minimum": 1,
          "maximum": 65534,
          "propertyOrder": 3
        }
      },
      "propertyOrder": 3,
      "required": ["host", "port", "address"],
      "options" : {
        "disable_edit_json" : true,
        "disable_collapse" : true,
        "disable_properties": true
      }
    },
    "groups": {
      "type": "array",
      "title": "Groups of controls",
      "propertyOrder": 4,
      "items": {
        "$ref": "#/definitions/group"
      },
      "options": {
        "disable_array_reorder": true,
        "disable_array_delete_last_row": true,
        "disable_array_delete_all_rows": true,
        "disable_collapse": true
      },
      "_format": "tabs"
    }
  },
  "required": ["iec104", "groups"],
  "options" : {
    "disable_properties": true,
    "disable_collapse": true,
    "disable_edit_json": true
  },
  "translations": {
